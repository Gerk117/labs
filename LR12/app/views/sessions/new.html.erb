<%= form_tag('sessions/create', :method => 'post') do %>
    <%= label_tag ('Login') %>
    <%= text_field_tag :login %><br>
    <%= label_tag('Password') %>
    <%= password_field_tag :password %><br>

    <%= submit_tag ('Log In') %>
<% end %>
<p>New user? <%= link_to 'Sign up now!', signup_path %></p>
